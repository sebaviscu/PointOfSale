@using PointOfSale.Models;
@model VMSale;
@{
    Layout = null;
}

@{
    string menucollapse = "menucollapse";
    int correlative = 1;
}



<!-- Grid Modal -->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Finalizar Venta</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    <label for="txtNombre">Cliente</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtNombre" name="Nombre">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="cboTypeDocumentSale">Tipo</label>
                                    </div>
                                    <select class="form-control" id="cboTypeDocumentSale">
                                    </select>
                                </div>
                                <div class="form-group col-sm-6">
                                    <input type="text" class="form-control form-control-sm" id="txtSubTotal1" name="txtSubTotal1">
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSave">Filanizar</button>
            </div>
        </div>
    </div>
</div>



@{
    ViewData["Title"] = "Tiendas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section StylesPOS {

    <link href="~/plugins/data-tables/datatables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/buttons.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/responsive.datatables.min.css" rel="stylesheet">


}

<div class="row">
    <div class="col-sm-12">

        <div class="card card-default">
            <div class="card-header d-flex align-items-center">
                <h4 class="col-md-2">Tiendas</h4>
                <span class="offset-md-2 text-danger" id="lblErrorPrintService" style="display: none;"><i class="mdi mdi-alert mdi-24px"></i>&nbsp; El servicio de impresión no se encuentra conectado</span>

                <div class="ms-auto bd-highlight">
                    <button class="btn btn-sm btn-success" id="btnNew">Nueva Tienda</button>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Description</th>
                                    <th>Telefono</th>
                                    <th>Direccion</th>
                                    <th>Precios</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Grid Modal -->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Detalle Tiendas</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-md-2">

                        <!-- Nav pills -->
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="pill" href="#general" id="clickGeneral">General</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#facturacion" id="clickFacturacion">Facturacion</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-10" style="min-height: 250px;">
                        <input type="hidden" value="0" id="txtId">
                        <div class="tab-content">
                            <div class="tab-pane container active" id="general">
                                <div class="row">
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <label for="txtDescription">Nombre</label>
                                            <input type="text" class="form-control form-control-sm input-validate" id="txtNombre" name="Nombre">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="cboListaPrecios">Lista de Precios <i style="color:red;" class="mdi mdi-alert" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Deberá iniciar sesion nuevamente para que impacte la nueva Lista de Precios"></i></label>

                                            <select class="form-control form-control-sm" id="cboListaPrecios">
                                                <option value="1">Lista 1</option>
                                                <option value="2">Lista 2</option>
                                                <option value="3">Lista 3</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="txtTelefono">Telefono</label>
                                            <input type="text" class="form-control form-control-sm" id="txtTelefono" name="Telefono">
                                        </div>
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <label for="txtDireccion">Direccion</label>
                                            <input type="text" class="form-control form-control-sm" id="txtDireccion" name="Direccion">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="txtEmail">Email</label>
                                            <input type="text" class="form-control form-control-sm" id="txtEmail" name="Email">
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="txtImpresora">Nombre Impresora de Ticket</label>
                                            <select class="form-control form-control-sm" id="cboNombreTienda" name="Impresora Ticket"></select>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    @* <div class="col-sm-6">
                                    <div class="form-row">
                                    <div class="form-group">
                                    <label for="txtPhoto">Logo</label>
                                    <input class="form-control-file" type="file" id="txtLogo" />
                                    </div>
                                    </div>
                                    <div class="form-row">
                                    <img id="imgTienda" style="max-width:200px;" src="" class="rounded mx-auto d-block" alt="Imagen Tienda">
                                    </div>
                                    </div> *@
                                </div>

                            </div>
                            <div class="tab-pane container fade" id="facturacion">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="txtEnvioGratis">Ruta del certificado</label>
                                            <input type="text" class="form-control form-control-sm" id="txtEnvioGratis" name="EnvioGratis">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="txtWhatsApp">Contraseña del certificado</label>
                                            <input type="password" class="form-control form-control-sm" id="txtWhatsApp" name="WhatsApp">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane container form-row" id="divModif">
                            <div class=" form-group col-sm-6">
                                <label for="txtModificado">Fecha Modificado</label>
                                <input type="text" class="form-control form-control-sm" id="txtModificado" name="fechaModificado" readonly>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="txtModificadoUsuario">Por:</label>
                                <input type="text" class="form-control form-control-sm" id="txtModificadoUsuario" name="usuarioModificado" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSave">Guardar Cambios</button>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <script src="~/plugins/data-tables/jquery.datatables.min.js"></script>
    <script src="~/plugins/data-tables/datatables.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/datatables.responsive.min.js"></script>


    <script src="~/plugins/data-tables/dataTables.buttons.min.js"></script>
    <script src="~/plugins/data-tables/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/jszip.min.js"></script>
    <script src="~/plugins/data-tables/buttons.html5.min.js"></script>
    <script src="~/plugins/data-tables/buttons.print.min.js"></script>
    <script src="~/plugins/printService.js"></script>

    <script src="~/js/views/tienda.js"></script>
}


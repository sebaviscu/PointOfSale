@using PointOfSale.Models;
@model List<VMNotifications>;
@{
    Layout = null;
}

@if (Model.Any())
{
    <ul class="dropdown user-menu show">
        <button href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
            <i class="mdi mdi-asterisk mdi-24px"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            @foreach (var n in Model)
            {
                <li class="dropdown-header">
                    <div class="d-inline-block">
                        <a href="/Notification/NotificationForId?id=@n.IdNotifications">
                            <small class="pt-1">@n.Descripcion</small>
                            <small class="pt-1">@n.RegistrationDate</small>
                        </a>
                        <span></span>
                    </div>
                </li>
            }
            <li class="">
                <a href="/Notification/LimpiarTodoNotificacion">
                    <i class="mdi mdi-delete"></i>Limpiar 
                </a >
            </li>
        </ul>
    </ul>
}
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section StylesPOS {

    <link href="~/plugins/data-tables/datatables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/buttons.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/responsive.datatables.min.css" rel="stylesheet">


}

<div class="row">
    <div class="col-sm-12">
        <div class="card card-default">
            <div class="card-header d-flex align-items-center">
                <h4 class="col-md-2">Tablas</h4>
            </div>

            <div class="card-body" style="padding-top: 25px;">
                <div class="row">
                    <div class="col-sm-3">
                        <!-- Pestañas verticales -->
                        <ul class="nav nav-tabs d-flex flex-column" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="v-categoria-tab" data-bs-toggle="tab" href="#v-categoria" role="tab" aria-controls="v-categoria" aria-selected="true">Categorias</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="v-tags-tab-tab" data-bs-toggle="tab" href="#v-tags" role="tab" aria-controls="v-tags" aria-selected="false">Tags</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="v-formato-venta-tab" data-bs-toggle="tab" href="#v-formato-venta" role="tab" aria-controls="v-formato-venta" aria-selected="false">Formatos de Venta</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="v-tipo-gastos-tab" data-bs-toggle="tab" href="#v-tipo-gastos" role="tab" aria-controls="v-tipo-gastos" aria-selected="false">Tipos de Gastos</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="v-tipo-gastos-tab" data-bs-toggle="tab" href="#v-tipo-gastos" role="tab" aria-controls="v-tipo-gastos" aria-selected="false">Comodin 1</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="v-tipo-gastos-tab" data-bs-toggle="tab" href="#v-tipo-gastos" role="tab" aria-controls="v-tipo-gastos" aria-selected="false">Comodin 2</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="v-tipo-gastos-tab" data-bs-toggle="tab" href="#v-tipo-gastos" role="tab" aria-controls="v-tipo-gastos" aria-selected="false">Comodin 3</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-9">
                        <!-- Contenido de las pestañas -->
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-categoria" role="tabpanel" aria-labelledby="v-categoria-tab">

                                <!-- Contenido de la pestaña "Categorias" -->
                                <div class="card-header card-header-border-bottom" style="padding-top: 0;">
                                    <div>
                                        <h4>Categorias</h4>
                                    </div>
                                    <div class="ms-auto bd-highlight">
                                        <button class="btn btn-info" id="btnNew">Nueva Categoria</button>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="tbData" class="table table-striped" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>Descripcion</th>
                                                        <th>Estado</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-tags" role="tabpanel" aria-labelledby="v-tags-tab">

                                <!-- Contenido de la pestaña "Tags" -->
                                <div class="card-header card-header-border-bottom" style="padding-top: 0;">
                                    <div>
                                        <h4>Tags</h4>
                                    </div>
                                    <div class="ms-auto bd-highlight">
                                        <button class="btn btn-info" id="btnAddNewTag">Nuevo Tags</button>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="tbTags" class="table table-striped  table-sm" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>Descripcion</th>
                                                        <th>Color</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="tab-pane fade" id="v-formato-venta" role="tabpanel" aria-labelledby="v-formato-venta-tab">
                                <!-- Contenido de la pestaña "Formato de Venta" -->

                                <div class="card-header card-header-border-bottom" style="padding-top: 0;">
                                    <div>
                                        <h4>Formato de Venta</h4>
                                    </div>
                                    <div class="ms-auto bd-highlight">
                                        <button class="btn btn-info" id="btnAddNewTag">Nuevo Formato de Venta</button>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="tbFormatoVenta" class="table table-striped  table-sm" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>Descripcion</th>
                                                        <th>Valor</th>
                                                        <th>Estado</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="tab-pane fade" id="v-tipo-gastos" role="tabpanel" aria-labelledby="v-tipo-gastos-tab">
                                <!-- Contenido de la pestaña "tipo-gastos" -->
                                <div class="card-header card-header-border-bottom" style="padding-top: 0;">
                                    <div>
                                        <h4>Tipo de Gastos</h4>
                                    </div>
                                    <div class="ms-auto bd-highlight">
                                        <button class="btn btn-info" id="btnAddNewTag">Nuevo Tipo de Gastos</button>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="tbTipoGastos" class="table table-striped  table-sm" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>Descripcion</th>
                                                        <th>Tipo</th>
                                                        <th>Iva</th>
                                                        <th>Factura</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Grid Modal -->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Detalle Categorias</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtDescription">Descripción</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtDescription" name="Description">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="cboState">Estado</label>
                                    <select class="form-control form-control-sm" id="cboState">
                                        <option value="1">Activo</option>
                                        <option value="0">Inactivo</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row" id="divModif">
                                <div class="form-group col-sm-6">
                                    <label for="txtModificado">Fecha Modificado</label>
                                    <input type="text" class="form-control form-control-sm" id="txtModificado" name="fechaModificado" readonly>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtModificadoUsuario">Por:</label>
                                    <input type="text" class="form-control form-control-sm" id="txtModificadoUsuario" name="usuarioModificado" readonly>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSave">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<!-- Grid Modal for Tags -->
<div class="modal fade" id="modalTagData" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Detalle Tag</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" value="0" id="txtTagId">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-row">
                            <div class="form-group col-sm-7">
                                <label for="txtTagName">Nombre</label>
                                <input type="text" class="form-control form-control-sm input-validate" id="txtTagName" name="TagName">
                            </div>
                            <div class="form-group col-sm-5">
                                <label for="txtTagColor">Color</label>
                                <input type="color" class="form-control form-control-sm" id="txtTagColor" name="TagColor">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSaveTag">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<!-- Grid Modal Tipo de Gastos -->
<div class="modal fade" id="modalDataTipoDeGasto" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Tipo De Gasto</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtIdTipoGastos">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label for="cboTipoDeGasto">Tipo de Gasto</label>
                                    <select class="form-control form-control-sm  input-validate" id="cboTipoDeGasto">
                                        <option value="-1"></option>
                                        <option value="0">Sueldo</option>
                                        <option value="1">Gasto Fijo</option>
                                        <option value="2">Gasto Variable</option>
                                        <option value="3">Servicios</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-8">
                                    <label for="txtDescripcionTipoDeGasto">Descripción</label>
                                    <input type="text" class="form-control form-control-sm input-validate-TipoDeGastos" id="txtDescripcionTipoDeGasto" name="Description">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-row">
                                <div class="form-group col-sm-6 margin-min">
                                    <label for="txtIvaTipoGasto">IVA</label>
                                    <select class="form-control form-control-sm" id="txtIvaTipoGasto">
                                        <option value="0">0 %</option>
                                        <option value="10.5">10,5 %</option>
                                        <option value="21">21 %</option>
                                        <option value="27">27 %</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="cboTipoFacturaTipoGasto">Factura</label>
                                    <select class="form-control form-control-sm" id="cboTipoFacturaTipoGasto">
                                        <option value=""></option>
                                        <option value="0">A</option>
                                        <option value="1">B</option>
                                        <option value="2">C</option>
                                        <option value="3">X</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSaveTipoDeGastos">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<!-- Grid Modal Formato de Venta -->
<div class="modal fade" id="modalFormatoVenta" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Formato de Venta</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" value="0" id="txtIdFormatoVenta">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-row">
                            <div class="form-group col-sm-5">
                                <label for="txtDescripcionFormatoVenta">Descripcion</label>
                                <input type="text" class="form-control form-control-sm input-validate-Formato-Venta" id="txtDescripcionFormatoVenta" name="Description Formato Venta">
                            </div>

                            <div class="form-group col-sm-4">
                                <label for="txtValorFormatoVenta">Valor</label><span class="mdi mdi-information text-info" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Se debe colocar el equivalente en gramos"></span>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control form-control-sm input-validate-Formato-Venta" id="txtValorFormatoVenta" name="ValorFormato Venta">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">gramos</span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-sm-3">
                                <label for="cboStateFormatoVenta">Estado</label>
                                <select class="form-control form-control-sm" id="cboStateFormatoVenta">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSaveFormatoVenta">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>



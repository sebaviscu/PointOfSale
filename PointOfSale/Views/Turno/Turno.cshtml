@{
    ViewData["Title"] = "Turnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section StylesPOS{

    <link href="~/plugins/data-tables/datatables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/buttons.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/responsive.datatables.min.css" rel="stylesheet">


}

<div class="row">
    <div class="col-sm-12">

        <div class="card card-default">
            <div class="card-header card-header-border-bottom">
                <div class="row col-md 3">
                    <h4>Turnos</h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Fecha</th>
                                    <th>Inicio</th>
                                    <th>Fin</th>
                                    <th>Cierre</th>
                                    <th>Descripcion</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Grid Modal Turno-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Turno</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="col-sm-12">
                                <div class="form-row">
                                    <div class="form-group col-sm-4">
                                        <label for="txtFecha">Fecha</label>
                                        <input type="text" class="form-control form-control-sm" id="txtFecha" name="Fecha de Inicio" disabled>
                                    </div>
                                    <div class="form-group col-sm-4">
                                        <label for="txtHoraInicio">Hora de Inicio</label>
                                        <input type="text" class="form-control form-control-sm" id="txtHoraInicio" name="Hora de Inicio" disabled>
                                    </div>
                                    <div class="form-group col-sm-4">
                                        <label for="txtHoraFin">Hora de Fin</label>
                                        <input type="text" class="form-control form-control-sm" id="txtHoraFin" name="Hora de Fin" disabled>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-8">
                                        <label for="txtDescripcion">Descripcion</label>
                                        <input type="text" class="form-control form-control-sm" id="txtDescripcion" name="Descripcion">
                                    </div>
                                    <div class="form-group col-sm-4">
                                        <br />
                                        <br />
                                        <label class="input-group" for="txtTotal" id="txtTotal" style="margin-left: 10px;">Total:</label>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div>
                                        <h3 for="contMetodosPago" class="form-label">Ventas:</h3>
                                    </div>
                                    <div class="row justify-content-md-center">
                                        <ul id="contMetodosPago"></ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSave">Guardar Turno</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/plugins/data-tables/jquery.datatables.min.js"></script>
    <script src="~/plugins/data-tables/datatables.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/datatables.responsive.min.js"></script>


    <script src="~/plugins/data-tables/dataTables.buttons.min.js"></script>
    <script src="~/plugins/data-tables/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/jszip.min.js"></script>
    <script src="~/plugins/data-tables/buttons.html5.min.js"></script>
    <script src="~/plugins/data-tables/buttons.print.min.js"></script>

    <script src="~/js/views/turno.js"></script>
}


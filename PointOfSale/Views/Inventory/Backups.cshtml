@{
    ViewData["Title"] = "Backup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section StylesPOS {

        <link href="~/plugins/data-tables/datatables.bootstrap4.min.css" rel="stylesheet">
        <link href="~/plugins/data-tables/buttons.bootstrap4.min.css" rel="stylesheet">
        <link href="~/plugins/data-tables/responsive.datatables.min.css" rel="stylesheet">
        <link href="~/plugins/select2/css/select2.min.css" rel="stylesheet">


}

<div class="row">
    <div class="col-sm-12">

        <div class="card card-default">
            <div class="card-header card-header-border-bottom">
                <div class="">
                    <h4>Backups</h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="tbDataBackup" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th>Producto</th>
                                    <th>Fecha Modificacion</th>
                                    <th>Por</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDataBackup" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid" aria-hidden="true">
    <div class="modal-dialog" role="document" style="min-width: 90%">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalGridTitle">Backup</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" value="0" id="txtId">
                <input type="hidden" value="0" id="txtCorrelativeNumberMasivo">
                <div class="row mb-5">
                    <div class="col-sm-12">
                        <div class="form-row">
                            <div class="col-sm-2">
                                <label for="txtModificado">Fecha Modificado</label>
                                <input type="text" class="form-control form-control-sm" id="txtModificado" name="fechaModificado" readonly>
                            </div>
                            <div class="col-sm-2">
                                <label for="txtModificadoUsuario">Por:</label>
                                <input type="text" class="form-control form-control-sm" id="txtModificadoUsuario" name="usuarioModificado" readonly>
                            </div>
                            <div class="offset-md-1 col-sm-3" style="align-self: end;">
                                <button class="btn btn-success btn-sm" id="btnRestoreBackup"><span class="mdi mdi-backup-restore me-1"></span> Restaurar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div style="overflow-x: auto; overflow-y: auto; max-height: 400px; border: 1px solid #ddd;width: 100%;">
                            <table id="tbDataProductosBackup" class="table table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>TipoVenta</th>
                                        <th>Iva</th>
                                        <th>Costos</th>
                                        <th>Precio (1)</th>
                                        <th>Profit(1)</th>
                                        <th>Precio (2)</th>
                                        <th>Profit(2)</th>
                                        <th>Precio (3)</th>
                                        <th>Profit(3)</th>
                                        <th>Precio Web</th>
                                        <th>FormatoWeb</th>
                                        <th>Precio Formato Web</th>
                                        <th>Categoria</th>
                                        <th>Proveedor</th>
                                        <th>Estado</th>
                                        <th>Destacado</th>
                                        <th>ProductoWeb</th>
                                        <th>Modificar Precio</th>
                                        <th>Precio Al Momento</th>
                                        <th>Excluir Promociones</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/plugins/data-tables/jquery.datatables.min.js"></script>
    <script src="~/plugins/data-tables/datatables.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/datatables.responsive.min.js"></script>
    <script src="~/plugins/jquery-ui/jquery-ui.js"></script>


    <script src="~/plugins/data-tables/dataTables.buttons.min.js"></script>
    <script src="~/plugins/data-tables/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/jszip.min.js"></script>
    <script src="~/plugins/data-tables/buttons.html5.min.js"></script>
    <script src="~/plugins/data-tables/buttons.print.min.js"></script>

    <script src="~/plugins/select2/js/select2.js"></script>
    <script src="~/plugins/moment.js"></script>

    <script src="~/js/views/backup.js"></script>
}


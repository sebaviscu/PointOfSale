@{
    ViewData["Title"] = "IvaReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section StylesPOS{
    <link href="~/plugins/data-tables/datatables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/buttons.bootstrap4.min.css" rel="stylesheet">
    <link href="~/plugins/data-tables/responsive.datatables.min.css" rel="stylesheet">
    <link href="~/plugins/jquery-ui/jquery-ui.css" rel="stylesheet">

}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6>Reporte de IVA</h6>
    </div>
    <div class="card-body">
        <div class="form-row align-items-end">
            <div class="form-group col-sm-2">
                <label for="cboTipoIva">Tipo de IVA</label>
                <select class="form-control" id="cboTipoIva">
                    <option value="0">Comprador</option>
                    <option value="1">Vendedor</option>
                    <option value="2">Gastos</option>
                </select>
            </div>

            <div class="form-group col-sm-2">
                <label for="txtFecha">Periodo</label>
                <select class="form-control" id="txtFecha">
                </select>
            </div>
            <div class="form-group col-sm-2">
                <button type="button" class="btn btn-primary w-100" id="btnSearch"><i class="fas fa-search"></i> Buscar</button>
            </div>
        </div>
        <div class="row">
            <div class="offset-md-1 col-md-3">
                <label id="lblTotal" style="font-size: 18px;"></label>
            </div>
            <div class="offset-md-1 col-md-3">
                <label id="lblTotalSinIva" style="font-size: 18px;"></label>
            </div>
            <div class="offset-md-1 col-md-3">
                <label id="lblTotalIva" style="font-size: 18px;"></label>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <div id="div-ivaComprador" style="width:100%; display:none;">
                    <table id="tbdataComprador" class="table table-striped" cellspacing="0" style="width:100%;">
                        <thead>
                            <tr>
                                <th scope="col">Fecha</th>
                                <th scope="col">Forma de Pago</th> 
                                <th scope="col">Importa Final</th>
                                <th scope="col">Importe sin IVA</th>
                                <th scope="col">Importe IVA</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

                <div id="div-ivaVendedor" style="width:100%; display:none;">

                    <table id="tbdataVendedor" class="table table-striped" cellspacing="0" style="width:100%;">
                        <thead>
                            <tr>
                                <th scope="col">Fecha</th>
                                <th scope="col">Proveedor</th>
                                <th scope="col">Tipo Factura</th>
                                <th scope="col">Factura</th>
                                <th scope="col">Importa Final</th>
                                <th scope="col">Importe sin IVA</th>
                                <th scope="col">Importe IVA</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

                <div id="div-ivaServicios" style="width:100%; display:none;">

                    <table id="tbdataServicios" class="table table-striped" cellspacing="0" style="width:100%;">
                        <thead>
                            <tr>
                                <th scope="col">Fecha</th>
                                <th scope="col">Tipo de Gasto</th>
                                <th scope="col">Gasto</th>
                                <th scope="col">Tipo Factura</th>
                                <th scope="col">Factura</th>
                                <th scope="col">Importa Final</th>
                                <th scope="col">Importe sin IVA</th>
                                <th scope="col">Importe IVA</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/plugins/data-tables/jquery.datatables.min.js"></script>
    <script src="~/plugins/data-tables/datatables.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/datatables.responsive.min.js"></script>


    <script src="~/plugins/data-tables/dataTables.buttons.min.js"></script>
    <script src="~/plugins/data-tables/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/data-tables/jszip.min.js"></script>
    <script src="~/plugins/data-tables/buttons.html5.min.js"></script>
    <script src="~/plugins/data-tables/buttons.print.min.js"></script>


    <script src="~/plugins/jquery-ui/jquery-ui.js"></script>

    <script src="~/js/views/ReportsIva.js"></script>

    }


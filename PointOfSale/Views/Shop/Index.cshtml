			font-size: 1.5rem;
			border-radius: 50%;
			margin: 0 5px;
		}

		.input-producto {
			width: 25% !important;
			text-align: center;
			border: 0px solid lightgray;
			margin: 0 5px;
		}
	}

	@@media all and (min-width: 771px) {
		.img-fluid {
			min-height: 160px;
			max-height: 160px;
			width: auto;
		}
	}

